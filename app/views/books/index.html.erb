<h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'show', book %></td>
      <td><%= link_to 'edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= render partial: 'form', locals: {book: @book} %>

