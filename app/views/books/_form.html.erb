<% if flash[:error] %>
  <ul>
    <% flash[:error].each do |msg| %>
      <li class="error-message"><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

